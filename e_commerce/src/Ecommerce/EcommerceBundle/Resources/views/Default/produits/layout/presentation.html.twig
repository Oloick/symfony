{% extends "::base.html.twig" %}

{% block body %}
        <div class="container-fluid col-sm-offset-2 containerPresentation">
            <div class="row">
                <div class="col-sm-5">
                    <img src="{{produit.image}}" alt="{{produit.image}}" width="470" height="310">
                </div>

                <div class="col-sm-4">
                    <h4>{{ produit.nom}}</h4>
                    <h5>RÃ©ference du produit : {{ produit.id}}</h5>
                    <p>{{produit.description}}</p>
                    <h4>{{produit.prix}}</h4>
                    <form class="presentationPanier" action="{{ path('panier') }}">
                        <div class="input-group col-sm-5">
                          <span class="input-group-btn">
                              <button type="button" class="btn btn-danger btn-number"  data-type="minus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-minus"></span>
                              </button>
                          </span>
                          <input type="text" name="quant[2]" class="form-control input-number" value="1" min="1" max="100">
                          <span class="input-group-btn">
                              <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                                  <span class="glyphicon glyphicon-plus"></span>
                              </button>
                          </span>
                      </div>

                        <div>
                            <button class="btn btn-primary">Ajouter au panier</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
